{
  "name": "electron-screenshots",
  "version": "0.1.3",
  "description": "electron 截图插件",
  "types": "lib/screenshots.d.ts",
  "main": "lib/screenshots.js",
  "files": [
    "lib/**"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "start": "DEBUG=screenshots electron lib/index.js",
    "dev": "tsc --sourceMap --watch",
    "build": "npm run lint && npm run clean && tsc",
    "lint": "eslint . --ext .js,.ts --fix",
    "clean": "rimraf lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nashaofu/screenshots.git"
  },
  "keywords": [
    "electron",
    "shortcut",
    "capture",
    "plugin"
  ],
  "author": "nashaofu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nashaofu/screenshots/issues"
  },
  "homepage": "https://github.com/nashaofu/screenshots/tree/master/packages/electron-screenshots#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "debug": "^4.3.3",
    "react-screenshots": "^0.1.2"
  },
  "peerDependencies": {
    "electron": ">=11"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "electron": "^14.0.1",
    "electron-debug": "^3.2.0",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  }
}
