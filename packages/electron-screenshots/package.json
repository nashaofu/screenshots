{
  "name": "electron-screenshots",
  "version": "0.4.3-alpha.0",
  "description": "electron 截图插件",
  "types": "lib/screenshots.d.ts",
  "main": "lib/screenshots.js",
  "files": [
    "lib/**"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "start": "cross-env DEBUG=electron-screenshots electron lib/index.js",
    "dev": "tsc --sourceMap --watch",
    "build": "npm run lint && npm run clean && tsc",
    "lint": "eslint . --ext .js,.ts --fix",
    "clean": "rimraf lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nashaofu/screenshots.git"
  },
  "keywords": [
    "electron",
    "shortcut",
    "screenshot",
    "cropper"
  ],
  "author": "nashaofu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nashaofu/screenshots/issues"
  },
  "homepage": "https://github.com/nashaofu/screenshots/tree/master/packages/electron-screenshots#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "debug": "^4.3.3",
    "fs-extra": "^10.1.0",
    "node-screenshots": "^0.0.3",
    "react-screenshots": "^0.4.3-alpha.0"
  },
  "peerDependencies": {
    "electron": ">=11"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.7",
    "electron-debug": "^3.2.0",
    "eslint": "^8.7.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  }
}
